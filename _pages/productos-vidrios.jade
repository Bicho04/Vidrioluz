
mixin vidrio(img, h3)
	a(href="productos-vidrios#{h3}.html").vidrio.folder
		figure
			img(src="http://loremflickr.com/200/100/glass?random=#{img}", alt="Vidrioluz - #{h3}")
		h3 #{h3}

extends ../_layout/default

block title
	title Productos Vidrios
	meta(name='description', content='#####')

block body
	section.slide.slide-small
		.pictures
			+picture('1','IMPONIENDO UNA TENDENCIA MODERNA Y VISIONARIA')

	section.vidrios
		h2 Vidrios
		section.folders
			+vidrio('1','Templados')
			+vidrio('2','Laminados')
			+vidrio('3','Flotados')
			+vidrio('4','Espejos')
			+vidrio('5','Reflectivos')
			+vidrio('6','Dreamglass')
			+vidrio('7','Profilit')
			+vidrio('8','Extra Claro')

