mixin menu-boton(link, name)
	li: a(href="#{link}") #{name}

mixin picture(img, h3)
	.picture
		img(src="http://loremflickr.com/1024/400/glass?random=#{img}", alt="Vidrioluz - #{link}")
		h3 #{h3}

